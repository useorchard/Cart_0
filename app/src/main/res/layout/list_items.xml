<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/item_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_start"

        android:textColor="#000000" />

    <TextView
        android:id="@+id/item_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/item_push"
        android:layout_toStartOf="@+id/item_push"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
         />

    <TextView
        android:id="@+id/item_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/item_retrieve"
        android:layout_alignEnd="@+id/item_retrieve"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/item_retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#000000"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:layout_alignTop="@+id/item_start"
        android:layout_toRightOf="@+id/item_start"
        android:layout_toEndOf="@+id/item_start"
         />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_name" />
    //android:src="@drawable/fwd"


</RelativeLayout>  